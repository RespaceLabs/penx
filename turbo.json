{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.production", "**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "NEXT_PUBLIC_PROJECT_ID",
    "NEXT_PUBLIC_DEPLOY_MODE",
    "NODE_ENV",
    "NEXT_PUBLIC_NEXTAUTH_PROVIDERS",
    "SELF_HOSTED_CREDENTIALS",
    "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
    "NEXT_PUBLIC_GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_GITHUB_CLIENT_ID",
    "NEXT_PUBLIC_GITHUB_CLIENT_SECRET",
    "NEXT_PUBLIC_GITHUB_APP_NAME",
    "GITHUB_PRIVATE_KEY",
    "GITHUB_APP_ID",
    "DATABASE_URL",
    "CI",
    "SKIP_ENV_VALIDATION",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_BUCKET",
    "SUPABASE_KEY",
    "PORT",
    "REDIS_URL",
    "NEXT_PUBLIC_SPACE_INFO_SSE_URL",
    "NEXT_PUBLIC_PLATFORM",
    "PLASMO_PUBLIC_PLATFORM",
    "PLASMO_PUBLIC_BASE_URL",
    "TWITTER_BEARER_TOKEN",
    "SCRAPINGBEE_API_KEY"
  ],
  "remoteCache": {
    "signature": true
  },
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {}
  }
}
